import javafx.application.Application;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import javax.swing.Timer;
import javax.swing.JPanel;

public class Gameplay extends JPanel implements KeyListener, ActionListener{
	private boolean play = false;


	private Timer timer; //palli liikumine
	private int delay = 2; //kiirus

	private int playerX = 310; // starting position

	private int ballposX = 120; //starting pos
	private int ballposY = 350; //starting pos
	private int ballXdir = -1; //liikumise suund
	private int ballYdir = -2; //liikumise suund




	public Gameplay() {
		addKeyListener(this);
		setFocusable(true);
		setFocusTraversalKeysEnabled(false);
		timer = new Timer(delay, this);
		timer.start();

	}

	public void paint(Graphics g) { //teen graafika objektidele
		//tagataust
		g.setColor(Color.black);
		g.fillRect(1,1, 692, 592);



		//ääred
		g.setColor(Color.white);
		g.fillRect(0, 0, 3, 592);
		g.fillRect(0, 0, 692, 3);
		g.fillRect(691, 0, 3, 592);

		//alus
		g.setColor(Color.white);
		g.fillRect(playerX, 550, 100, 8);

		//pall
		g.setColor(Color.red);
		g.fillOval(ballposX, ballposY, 20, 20);

		g.dispose();
	}

	public void actionPerformed(ActionEvent e) {
		timer.start();
		if(play) {
			if(new Rectangle(ballposX, ballposY, 20, 20).intersects(new Rectangle(playerX, 550, 100, 5))){
				ballYdir = -ballYdir;
			}

			ballposX += ballXdir;
			ballposY += ballYdir;
			if(ballposX < 0) {
				ballXdir = -ballXdir;
			}
			if(ballposY < 0) {
				ballYdir = -ballYdir;
			}
			if(ballposX > 670) {
				ballXdir = -ballXdir;
			}
		}



		repaint(); //pean uuesti värvima

	}


	public void keyTyped(KeyEvent e) {} //pole vajalik

	public void keyReleased(KeyEvent e) {} //pole vajalik


	public void keyPressed(KeyEvent e) {
		if(e.getKeyCode()==KeyEvent.VK_RIGHT) {
			if(playerX >= 600){
				playerX = 600;
			} else {
				moveRight();
			}
		}
		if(e.getKeyCode()==KeyEvent.VK_LEFT) {
			if(playerX < 10) {
				playerX = 10;
			}else {
				moveLeft();
			}

		}
	}
	public void moveRight() {
		play = true;
		playerX+=20;
	}
	public void moveLeft() {
		play = true;
		playerX-=20;
	}
}
