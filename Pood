katse.java

public class katse{
    public static void main(String[] arg){
        Kaup k1=new Kaup("tomat");
        Kaup k2=new Kaup("shampoon");
		Kaup k3=new Kaup("juukselakk");
        System.out.println(k1.kasOlemas());
        System.out.println(k1.lisaSumma(5));
        Pood k=new Pood();
        System.out.println(k.KaubadSisu("Lammas"));
        System.out.println(k.KaubadSisu("tomat"));
        /*System.out.println(k.ylekanne("EE9678", "EE9679", 2));*/
    }
}
